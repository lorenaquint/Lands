<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.LoginPage"
             Title="Login"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <ScrollView 
                BindingContext="{Binding Login}">
            <StackLayout
            Padding="5">
                <Image
                Source="onu.png"
                WidthRequest="200">
                
            </Image>
            <Grid
                  Margin="10,0"
                  VerticalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Email"       
                       VerticalOptions="Center"
                 />
                <Entry Keyboard="Email"
                   Placeholder="Enter your mail"
                   Grid.Column="1"
                   Text="{Binding Email, Mode = TwoWay}">
                
            </Entry>
                <Label Text="Password"
                       Grid.Row="1"
                       VerticalOptions="Center"
                  
                 />
                <Entry IsPassword="True"
                   Placeholder="Enter your password" Grid.Row="1" Grid.Column="1"
                    Text="{Binding Password,Mode=TwoWay}">
                    
                </Entry>
            </Grid>

                <ActivityIndicator
                               VerticalOptions="CenterAndExpand"
                               IsRunning="{Binding IsRunning,Mode=TwoWay}">

                </ActivityIndicator>

                <StackLayout Orientation="Horizontal"
                             Margin="10,0"
                             VerticalOptions="CenterAndExpand">
                <Label Text="Remember me on device"
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand"/>
                <Switch
                       HorizontalOptions="End"
                        IsToggled="{Binding IsRemembered, Mode= TwoWay}"></Switch>
            </StackLayout >
                <Label 
                      Text="Forgot your Password"
                      VerticalOptions="CenterAndExpand"
                      HorizontalOptions="Center"
                      TextColor="Blue"
                    >

                </Label>
          
                  
            <StackLayout Margin="40,0" 
                         Orientation="Horizontal"
                         VerticalOptions="CenterAndExpand">
                <Button Text="Login"
                    BackgroundColor="Navy"
                    Command="{Binding LoginCommand}"
                    TextColor="White"
                    BorderRadius="23"
                    HeightRequest="46"
                    HorizontalOptions="FillAndExpand"
                    IsEnabled="{Binding IsEnabled, Mode = TwoWay}"
                    >

                </Button>
                <Button Text="Register"
                    BackgroundColor="Purple"
                    TextColor="White"
                    BorderRadius="23"
                    HeightRequest="46"
                    HorizontalOptions="FillAndExpand"
                    >

                </Button>
            </StackLayout>
            <StackLayout
                        Margin="0,10"
                         Orientation="Horizontal"
                         HorizontalOptions="Center"
                         VerticalOptions="EndAndExpand">
                <Image
                    Source="facebook_logo.png"
                    WidthRequest="40">
                    <Image.GestureRecognizers>
                           <TapGestureRecognizer Command = "{Binding LoginFacebookCommand}">
                                
                            </TapGestureRecognizer>
                    </Image.GestureRecognizers>
                    </Image>
                <Image
                    Source="Twitter_logo.png"
                    WidthRequest="40"
                    >
                   
                    ></Image>
                <Image
                    Source="instagram_logo.png"
                     WidthRequest="70"
                    >
                   
                    ></Image>
            </StackLayout>
            
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>